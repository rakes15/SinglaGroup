<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal">
    <LinearLayout
        style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
        android:layout_margin="@dimen/padding32dp"
        android:gravity="center_vertical|center_horizontal">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTxt_WhatsApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                style="@style/CustomEditTextMatchParent"
                android:hint="Whats App No"
                android:singleLine="true"
                android:maxLength="10"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_whats_app"
                android:gravity="center_vertical"
                android:textCursorDrawable="@color/DarkGray"
                android:inputType="number"/>
            <requestFocus />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTxt_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding16dp">
            <EditText
                style="@style/CustomEditTextMatchParent"
                android:hint="Message"
                android:padding="10dp"
                android:textCursorDrawable="@color/DarkGray"
                android:inputType="none"/>
            <requestFocus />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/Button_Send"
            style="@style/CustomButtonMatchParent"
            android:padding="@dimen/padding10dp"
            android:layout_marginTop="@dimen/padding16dp"
            android:text="Send"
            android:drawableRight="@android:drawable/ic_menu_send"/>
        <Button
            android:id="@+id/Button_check"
            style="@style/CustomButtonMatchParent"
            android:padding="@dimen/padding10dp"
            android:layout_marginTop="@dimen/padding16dp"
            android:text="Check"/>
    </LinearLayout>
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>