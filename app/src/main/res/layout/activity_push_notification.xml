<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
	android:background="@color/row_active"
	android:padding="@dimen/padding15dp"
	android:gravity="center_horizontal">
	<LinearLayout
		style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
		android:visibility="gone">
		<View
			android:layout_width="match_parent"
			android:layout_height="1dip"
			android:layout_marginLeft="@dimen/padding10dp"
			android:layout_marginRight="@dimen/padding10dp"
			android:gravity="center_horizontal|center_vertical"
			android:background="#90a4ae"/>
		<TextView
			android:id="@+id/text_Title"
			style="@style/CustomMediumTextViewHeaderMatchParent"
			android:padding="10dp"
			android:gravity="center_horizontal"
			android:textColor="@color/attachment_icon_pdf"
			android:text="Device Request For Approval" />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dip"
			android:layout_marginLeft="@dimen/padding10dp"
			android:layout_marginRight="@dimen/padding10dp"
			android:gravity="center_horizontal|center_vertical"
			android:background="#90a4ae"/>
	</LinearLayout>
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">
		<LinearLayout
			style="@style/CustomeLinearLayoutVerticalBothMatchParent">
			<RelativeLayout
				android:id="@+id/RelativeLayout_is_group"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding8dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<RadioGroup
						android:id="@+id/radio_group_is_group"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_horizontal"
						android:layout_centerInParent="true">
						<RadioButton
							android:id="@+id/radio_button_is_group_yes"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:text="Yes"/>
						<RadioButton
							android:id="@+id/radio_button_is_group_no"
							android:layout_width="wrap_content"
                            android:checked="true"
							android:layout_margin="@dimen/padding5dp"
							android:layout_height="wrap_content"
							android:text="No"/>
					</RadioGroup>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="* Group"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<android.support.design.widget.TextInputLayout
				android:id="@+id/editText_conversion_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/padding10dp"
				android:textSize="14sp">
				<EditText
					style="@style/CustomEditTextMatchParent"
					android:inputType="number"
					android:singleLine="true"
					android:hint="* Conversion Number/Name"/>

			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
				android:id="@+id/editText_sr_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/padding10dp"
				android:textSize="14sp">
				<EditText
					style="@style/CustomEditTextMatchParent"
					android:inputType="number"
					android:maxLength="10"
					android:singleLine="true"
					android:hint="* S R Number"/>
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
				android:id="@+id/editText_number_of_times"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/padding10dp"
				android:textSize="14sp">
				<EditText
					style="@style/CustomEditTextMatchParent"
					android:inputType="number"
					android:maxLength="2"
					android:text="1"
					android:selectAllOnFocus="true"
					android:singleLine="true"
					android:hint="* Number of Times"/>
			</android.support.design.widget.TextInputLayout>
			<RelativeLayout
				android:id="@+id/RelativeLayout_Request_Status"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding8dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<LinearLayout
						style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent">
						<RadioGroup
							android:id="@+id/radio_group_schedule_time"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:gravity="center_horizontal"
							android:layout_centerInParent="true">
							<RadioButton
								android:id="@+id/radio_button_schedule_time_now"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
                                android:checked="true"
								android:layout_margin="@dimen/padding5dp"
								android:text="NOW"/>
							<RadioButton
								android:id="@+id/radio_button_schedule_time_custom"
								android:layout_width="wrap_content"
								android:layout_margin="@dimen/padding5dp"
								android:layout_height="wrap_content"
								android:text="Custom"/>
						</RadioGroup>
						<LinearLayout
							android:id="@+id/Linear_schedule_time"
							style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
							android:layout_margin="@dimen/padding10dp">
							<View
								android:layout_width="match_parent"
								android:layout_height="@dimen/padding1dp"
								android:layout_marginLeft="@dimen/padding8dp"
								android:layout_marginRight="@dimen/padding8dp"
								android:gravity="center_horizontal|center_vertical"
								android:background="#90a4ae"/>
							<LinearLayout
								style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
								android:gravity="center_horizontal|center_vertical"
								android:paddingTop="@dimen/padding10dp"
								android:layout_margin="@dimen/padding8dp">
								<LinearLayout
									style="@style/CustomeLinearLayoutHorizontalBothWrap"
									android:gravity="center_horizontal|center_vertical">
									<TextView
										android:id="@+id/text_date"
										style="@style/CustomSmallTextViewHeader"
										android:text="DD - MM - YYYY"
										android:gravity="center_vertical"
										android:drawableRight="@drawable/ic_calander_grey"
										android:drawablePadding="@dimen/padding5dp"/>
								</LinearLayout>
								<LinearLayout
									style="@style/CustomeLinearLayoutHorizontalBothWrap"
									android:gravity="center_horizontal|center_vertical">
									<View
										android:layout_width="@dimen/padding1dp"
										android:layout_height="@dimen/padding20dp"
										android:gravity="center_horizontal|center_vertical"
										android:background="#90a4ae"/>
								</LinearLayout>
								<LinearLayout
									style="@style/CustomeLinearLayoutHorizontalBothWrap"
									android:gravity="right|center_vertical">
									<TextView
										android:id="@+id/text_time"
										style="@style/CustomSmallTextViewHeader"
										android:text="HH - MM - SS"
										android:gravity="center_vertical|right"
										android:drawableRight="@drawable/ic_timer_grey"
										android:drawablePadding="@dimen/padding5dp"/>
								</LinearLayout>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="* Schedule Time"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/RelativeLayout_Request_Status"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding16dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<LinearLayout
						style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent">
						<RadioGroup
							android:id="@+id/radio_group_message_type"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:gravity="center_horizontal"
							android:layout_centerInParent="true">
							<RadioButton
								android:id="@+id/radio_button_message_type_text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:checked="true"
								android:layout_margin="@dimen/padding5dp"
								android:text="Text Only"/>
							<RadioButton
								android:id="@+id/radio_button_message_type_attachment"
								android:layout_width="wrap_content"
								android:layout_margin="@dimen/padding5dp"
								android:layout_height="wrap_content"
								android:text="Text With Attachment"/>
						</RadioGroup>
						<android.support.design.widget.TextInputLayout
							android:id="@+id/editText_text_message"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="@dimen/padding10dp"
							android:textSize="14sp">
							<EditText
								style="@style/CustomEditTextMatchParent"
								android:inputType="text"
								android:singleLine="false"
								android:hint="Message"/>
						</android.support.design.widget.TextInputLayout>
						<LinearLayout
							android:id="@+id/Linear_attachment"
							style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
							android:gravity="center_horizontal|center_vertical">
							<android.support.design.widget.TextInputLayout
								android:id="@+id/editText_file_description"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_below="@+id/text_attach_file"
								android:layout_margin="@dimen/padding10dp"
								android:textSize="14sp">
								<EditText
									style="@style/CustomEditTextMatchParent"
									android:inputType="text"
									android:singleLine="false"
									android:hint="Description"/>
							</android.support.design.widget.TextInputLayout>
							<TextView
								android:id="@+id/text_attach_file"
								style="@style/CustomSmallTextViewHeaderMatchParent"
								android:text="Attach file"
								android:paddingTop="@dimen/padding10dp"
								android:drawableLeft="@drawable/ic_action_attachment_png"
								android:drawablePadding="@dimen/padding10dp"
								android:layout_margin="@dimen/padding10dp"
								android:drawableTint="@color/Gray"/>
							<ImageView
								android:id="@+id/image_view"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:visibility="gone"
								android:layout_weight="1"
								android:cropToPadding="true"
								android:layout_margin="@dimen/padding10dp"
								android:background="@drawable/frame"/>
						</LinearLayout>
					</LinearLayout>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="Message Type"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<Button
				android:id="@+id/btn_submit"
				android:padding="10dp"
				android:visibility="visible"
				android:layout_marginTop="@dimen/padding10dp"
				android:gravity="center_horizontal|center_vertical"
				style="@style/CustomButtonMatchParent"
				android:text="Submit" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>