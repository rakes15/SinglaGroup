<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding5dp"
    android:layout_marginLeft="@dimen/padding5dp"
    android:layout_marginRight="@dimen/padding5dp"
    android:background="@color/Color_Grey"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/switch_thumb_normal_material_light">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_SerialNo"
                    style="@style/CustomSmallTextViewHeader"
                    android:padding="10dp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/textView_Barcode"
                    style="@style/CustomSmallTextViewHeader"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Barcode"/>
                <TextView
                    android:id="@+id/TextView_Itemcode"
                    style="@style/CustomSmallTextViewHeader"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:text="Item Code"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/table_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/switch_thumb_normal_material_light">
            <TableRow android:id="@+id/table_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/TextView_Color"
                            style="@style/CustomSmallTextViewHeader"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:text="Color"/>
                        <TextView
                            android:id="@+id/TextView_Size"
                            style="@style/CustomSmallTextViewHeader"
                            android:padding="3dp"
                            android:gravity="center_horizontal"
                            android:text="Size"/>
                        <TextView
                            android:id="@+id/TextView_Rate"
                            style="@style/CustomSmallTextViewHeader"
                            android:padding="3dp"
                            android:gravity="center_horizontal"
                            android:text="Rate"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/CustomSmallTextViewHeader"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:text="Booked Qty"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TextView_bookedQty"
                        style="@style/CustomSmallTextViewHeader"
                        android:padding="10dp"
                        android:background="@color/ripple_material_light"
                        android:textColor="@color/Color_Green"
                        android:gravity="center_horizontal"
                        android:text="1"/>
                </TableRow>
            </TableLayout>
            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/CustomSmallTextViewHeader"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/stock"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TextView_Stock_S_R"
                        style="@style/CustomSmallTextViewHeader"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:text="100"/>
                </TableRow>
            </TableLayout>
        </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>