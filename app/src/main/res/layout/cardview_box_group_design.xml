<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding10dp"
    android:layout_marginLeft="@dimen/padding10dp"
    android:layout_marginRight="@dimen/padding10dp"
    android:background="@color/Color_Grey"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout  style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
        android:gravity="center_horizontal">
        <LinearLayout
            style="@style/CustomeLinearLayoutVerticalBothWrap"
            android:id="@+id/linearLayout1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/imageView_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_new"/>
            <TextView
                android:id="@+id/textView_title"
                style="@style/CustomSmallTextViewHeader"
                android:text="ANDROID"
                android:textSize="@dimen/txtSize10"
                android:layout_marginTop="@dimen/padding10dp"
                android:layout_marginBottom="@dimen/padding10dp"/>
            <TextView
                android:id="@+id/textView_TotalStyle"
                style="@style/CustomSmallTextViewHeader"
                android:text="style"
                android:padding="@dimen/padding5dp"
                android:textSize="@dimen/txtSize"/>
            <TextView
                android:id="@+id/textView_TotalQty"
                style="@style/CustomSmallTextViewHeader"
                android:text="Qty"
                android:padding="@dimen/padding5dp"
                android:textSize="@dimen/txtSize"/>
            <TextView
                android:id="@+id/textView_TotalAmt"
                style="@style/CustomSmallTextViewHeader"
                android:text="Amt"
                android:padding="@dimen/padding5dp"
                android:textSize="@dimen/txtSize"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>