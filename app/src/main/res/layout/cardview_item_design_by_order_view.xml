<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding10dp"
    android:layout_margin="@dimen/padding2dp"
    android:background="@color/Color_Grey"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/padding5dp">
    <LinearLayout
        style="@style/CustomeLinearLayoutVerticalBothMatchParent"
        android:gravity="center_horizontal">
        <RelativeLayout
            style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/imageView_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding5dp"
                android:layout_weight="1"
                android:cropToPadding="true"
                android:src="@drawable/placeholder_new"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_info"
                android:paddingBottom="@dimen/padding15dp"
                android:paddingLeft="@dimen/padding15dp"
                android:src="@drawable/ic_info_grey"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:id="@+id/imageView_expected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/padding15dp"
                android:paddingTop="@dimen/padding15dp"
                android:src="@drawable/ic_datetime_grey"/>
            <TextView
                style="@style/CustomSmallTextViewHeader"
                android:id="@+id/textView_Color"
                android:drawableLeft="@drawable/ic_color_icon"
                android:gravity="center_horizontal|center_vertical"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/padding15dp"
                android:paddingRight="@dimen/padding15dp"
                android:textSize="10sp"
                android:layout_alignParentLeft="true"/>
            <TextView
                style="@style/CustomSmallTextViewHeader"
                android:id="@+id/textView_Color_Name"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView_Color"
                android:textSize="10sp" />
            <LinearLayout
                style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
                android:layout_alignParentBottom="true"
                android:id="@+id/linearLayout">
                <LinearLayout
                    style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent">
                    <LinearLayout
                        style="@style/CustomeLinearLayoutHorizontalBothWrap">
                        <LinearLayout
                            style="@style/CustomeLinearLayoutVerticalBothWrap">
                            <TextView
                                android:id="@+id/textView_title_price"
                                style="@style/CustomSmallTextViewHeader"
                                android:textSize="10sp"
                                android:padding="@dimen/padding2dp"/>
                            <TextView
                                android:id="@+id/textView_item_stock"
                                style="@style/CustomSmallTextViewContent"
                                android:textSize="10sp"
                                android:padding="@dimen/padding2dp"
                                android:textColor="@color/Color_Green"/>
                            <TextView
                                android:id="@+id/textView_title"
                                style="@style/CustomSmallTextViewContent"
                                android:textSize="10sp"
                                android:padding="@dimen/padding2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>