<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding10dp"
    android:layout_margin="@dimen/padding2dp"
    android:background="@color/Color_Grey"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/padding5dp">
    <LinearLayout
        style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/imageView_icon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:cropToPadding="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/placeholder_new"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_wishlist"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:button="@drawable/custom_wishlist"/>
            <TextView
                style="@style/CustomSmallTextViewHeader"
                android:id="@+id/textView_Color"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_color_icon"
                android:layout_alignParentTop="true"
                android:paddingRight="@dimen/padding15dp"
                android:paddingBottom="@dimen/padding15dp"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"/>
            <TextView
                style="@style/CustomSmallTextViewHeader"
                android:id="@+id/textView_Discount"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_discount_red"
                android:layout_alignParentTop="true"
                android:paddingRight="@dimen/padding15dp"
                android:paddingBottom="@dimen/padding15dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/textView_Color"/>
            <TextView
                style="@style/CustomSmallTextViewHeader"
                android:id="@+id/textView_Color_Name"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView_Color"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/imageView_CartIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkbox_wishlist"
                android:layout_alignParentRight="true"
                android:cropToPadding="true"
                android:visibility="invisible"
                android:src="@drawable/ic_cart"/>
            <LinearLayout
                style="@style/CustomeLinearLayoutVerticalBothWrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="start">
                <TextView
                    android:id="@+id/textView_in_quantity"
                    style="@style/CustomSmallTextViewHeader"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="12sp"
                    android:padding="@dimen/padding5dp"/>
                <TextView
                    android:id="@+id/textView_last_in_days"
                    style="@style/CustomSmallTextViewHeader"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="12sp"
                    android:padding="@dimen/padding5dp"/>
                <TextView
                    android:id="@+id/textView_item_create_days"
                    style="@style/CustomSmallTextViewHeader"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="12sp"
                    android:padding="@dimen/padding5dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/CustomeLinearLayoutVerticalBothWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end">
                <TextView
                    android:id="@+id/textView_out_quantity"
                    style="@style/CustomSmallTextViewHeader"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="12sp"
                    android:padding="@dimen/padding5dp"/>
                <TextView
                    android:id="@+id/textView_last_out_days"
                    style="@style/CustomSmallTextViewHeader"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="12sp"
                    android:padding="@dimen/padding5dp"/>
                <TextView
                    android:id="@+id/textView_ageing_days"
                    style="@style/CustomSmallTextViewHeader"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="12sp"
                    android:padding="@dimen/padding5dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
                android:visibility="visible"
                android:layout_alignBaseline="@id/imageView_icon"
                android:layout_alignBottom="@id/imageView_icon"
                android:id="@+id/linearLayout">
                <LinearLayout
                    style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent">
                    <LinearLayout
                        style="@style/CustomeLinearLayoutHorizontalBothWrap">
                        <LinearLayout
                            style="@style/CustomeLinearLayoutVerticalBothWrap">
                            <TextView
                                android:id="@+id/textView_title_price"
                                style="@style/CustomSmallTextViewHeader"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="12sp"
                                android:padding="@dimen/padding2dp"/>
                            <TextView
                                android:id="@+id/textView_title_price_discounted_rate"
                                style="@style/CustomSmallTextViewHeader"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="12sp"
                                android:padding="@dimen/padding2dp"/>
                            <TextView
                                android:id="@+id/textView_item_stock"
                                style="@style/CustomSmallTextViewContent"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="12sp"
                                android:padding="@dimen/padding2dp"
                                android:textColor="@color/Color_Green"/>
                            <TextView
                                android:id="@+id/textView_title"
                                style="@style/CustomSmallTextViewContent"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="12sp"
                                android:padding="@dimen/padding2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/CustomeLinearLayoutHorizontalBothWrap"
                        android:gravity="right|bottom"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imageViewSimilarItems"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cropToPadding="true"
                            android:padding="@dimen/padding5dp"
                            android:src="@drawable/ic_action_similar_grey"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_icon"
                android:layout_alignParentBottom="true">
                <TableLayout
                    android:id="@id/table_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>