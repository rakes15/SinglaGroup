<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="@dimen/padding2dp"
    android:background="@color/Color_Grey"
    card_view:cardCornerRadius="@dimen/padding5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/placeholder_new"/>
        <TextView
            android:id="@+id/textView_ColorName"
            style="@style/CustomSmallTextViewContent"
            android:textSize="10sp"
            android:padding="@dimen/padding5dp"/>
        <TextView
            android:id="@+id/textView_item_Price"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView_icon"
            style="@style/CustomSmallTextViewHeader"
            android:textSize="10sp"
            android:padding="@dimen/padding5dp"/>
        <TextView
            android:id="@+id/textView_ColorStock"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView_icon"
            style="@style/CustomSmallTextViewHeader"
            android:text="12"
            android:textColor="@color/Green"
            android:textSize="10sp"
            android:padding="@dimen/padding5dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>