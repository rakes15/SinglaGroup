<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5dp"
    android:background="@color/Color_Grey"
    android:theme="@style/AppTheme"
    card_view:cardCornerRadius="@dimen/padding5dp"
    card_view:contentPadding="@dimen/padding5dp">
    <LinearLayout
        style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:gravity="center_horizontal|center_vertical|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImageView_Icon"
                android:layout_width="@dimen/padding50dp"
                android:layout_height="@dimen/padding50dp"
                android:visibility="visible"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
        <LinearLayout
            style="@style/CustomeLinearLayoutHorizontalBothWrap"
            android:gravity="start|center_vertical">
            <LinearLayout
                style="@style/CustomeLinearLayoutVerticalBothWrap"
                android:gravity="start|center_vertical">
                 <TextView
                    android:id="@+id/textView"
                    style="@style/CustomMediumTextViewHeader"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding10dp"
                    android:paddingTop="@dimen/padding10dp"/>
                <TextView
                    android:id="@+id/textView_subTitle"
                    style="@style/CustomSmallTextViewContent"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/Maroon"
                    android:paddingLeft="@dimen/padding10dp"
                    android:paddingBottom="@dimen/padding10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal|center_vertical|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImageView_Download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:src="@drawable/ic_download"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>