<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Color_Grey"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        style="@style/CustomeLinearLayoutVerticalBothMatchParent"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/placeholder_new" />
        <TextView
            style="@style/CustomSmallTextViewHeader"
            android:text="1+"
            android:id="@+id/textView_Color"
            android:drawableLeft="@drawable/ic_color_icon"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/padding15dp"
            android:paddingBottom="@dimen/padding15dp"
            android:textSize="10sp"
            android:layout_alignParentLeft="true"/>
        <RelativeLayout
            style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
            android:layout_alignBottom="@+id/imageView_icon">
            <TextView
                android:id="@+id/textView_item_code"
                style="@style/CustomSmallTextViewHeader"
                android:text="₹100"
                android:textSize="10sp"
                android:padding="@dimen/padding5dp"/>
            <TextView
                android:id="@+id/textView_item_price"
                style="@style/CustomSmallTextViewContent"
                android:layout_below="@+id/textView_item_code"
                android:text="₹100"
                android:textSize="10sp"
                android:padding="@dimen/padding5dp"/>
            <TextView
                android:id="@+id/textView_item_stock"
                style="@style/CustomSmallTextViewContent"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:text="90"
                android:padding="@dimen/padding5dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
            android:background="@color/Color_lightGrey"
            android:layout_below="@id/imageView_icon">
            <LinearLayout
                style="@style/CustomeLinearLayoutHorizontalBothWrap"
                android:background="@color/AliceBlue"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/btn_AddToBox"
                    style="@style/CustomSmallTextViewHeader"
                    android:text="Add To Box"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="8sp"
                    android:drawableLeft="@drawable/ic_cart"
                    android:layout_margin="@dimen/padding5dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/CustomeLinearLayoutHorizontalBothWrap"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/btn_removeFromWishlist"
                    style="@style/CustomSmallTextViewHeader"
                    android:text="Remove from Wishlist"
                    android:drawableLeft="@drawable/ic_wishlist"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="8sp"
                    android:layout_margin="@dimen/padding5dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>