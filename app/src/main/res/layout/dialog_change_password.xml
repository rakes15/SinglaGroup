<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/row_active"
	android:padding="@dimen/padding15dp"
	android:gravity="center_horizontal">
	<TextView
		android:id="@+id/text_Title"
		style="@style/CustomMediumTextViewHeaderMatchParent"
		android:padding="10dp"
		android:gravity="center_horizontal"
		android:textColor="@color/attachment_icon_pdf"
		android:text="Change Password" />
	<RadioGroup
		android:id="@+id/RadioGroup_NewForgot"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:gravity="center_horizontal|center_vertical"
		android:background="@drawable/linear_layout_border"
		android:padding="@dimen/padding10dp"
		android:layout_margin="@dimen/padding5dp"
		android:orientation="horizontal">
		<RadioButton
			android:id="@+id/RadioButton_NewUser"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/padding10dp"
			android:text="New User"/>
		<RadioButton
			android:id="@+id/RadioButton_ForgotPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/padding30dp"
			android:padding="@dimen/padding10dp"
			android:text="Forgot Password"/>
	</RadioGroup>
	<TextView
		android:id="@+id/text_Msg"
		style="@style/CustomSmallTextViewHeaderMatchParent"
		android:padding="@dimen/padding10dp"
		android:layout_marginBottom="@dimen/padding10dp"
		android:visibility="gone"
		android:gravity="start"
		android:textColor="@color/BlueViolet"
		android:text="Please contact system administrator to reset your account password. \nWhen reset is done enter below new password." />
	<android.support.design.widget.TextInputLayout
		android:id="@+id/editText_OldPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/padding15dp"
		android:textSize="15sp">
		<EditText
			style="@style/CustomEditTextMatchParent"
			android:inputType="textPassword"
			android:singleLine="true"
			android:hint="Old Password"/>
	</android.support.design.widget.TextInputLayout>
	<android.support.design.widget.TextInputLayout
		android:id="@+id/editText_NewPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/padding15dp"
		android:textSize="15sp">
		<EditText
			style="@style/CustomEditTextMatchParent"
			android:inputType="textPassword"
			android:singleLine="true"
			android:hint="New Password"/>
	</android.support.design.widget.TextInputLayout>
	<android.support.design.widget.TextInputLayout
		android:id="@+id/editText_confirmPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/padding15dp"
		android:textSize="15sp">
		<EditText
			style="@style/CustomEditTextMatchParent"
			android:inputType="textPassword"
			android:singleLine="true"
			android:hint="Confirm Password"/>
	</android.support.design.widget.TextInputLayout>
	<Button
		    android:id="@+id/btn_submit"
			android:padding="10dp"
			android:layout_marginTop="20dp"
		    style="@style/CustomButtonMatchParent"
		    android:text="Submit" />
</LinearLayout>