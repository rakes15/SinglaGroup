<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
	android:background="@color/row_active"
	android:padding="@dimen/padding15dp"
	android:gravity="center_horizontal">
	<LinearLayout
		style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent">
		<View
			android:layout_width="match_parent"
			android:layout_height="1dip"
			android:layout_marginLeft="@dimen/padding10dp"
			android:layout_marginRight="@dimen/padding10dp"
			android:gravity="center_horizontal|center_vertical"
			android:background="#90a4ae"/>
		<TextView
			android:id="@+id/text_Title"
			style="@style/CustomMediumTextViewHeaderMatchParent"
			android:padding="10dp"
			android:gravity="center_horizontal"
			android:textColor="@color/attachment_icon_pdf"
			android:text="Device Request For Approval" />
		<View
			android:layout_width="match_parent"
			android:layout_height="1dip"
			android:layout_marginLeft="@dimen/padding10dp"
			android:layout_marginRight="@dimen/padding10dp"
			android:gravity="center_horizontal|center_vertical"
			android:background="#90a4ae"/>
	</LinearLayout>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			style="@style/CustomeLinearLayoutVerticalBothMatchParent">
			<TableLayout
				android:id="@+id/table_Layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"/>
			<LinearLayout
				style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent">
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:padding="10dp"
					android:textColor="@color/colorPrimaryDark"
					android:text="*Select User" />
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding10dp"
					android:background="@drawable/frame">
					<ProgressBar
						android:id="@+id/progressBarUser"
						style="?android:attr/progressBarStyleSmall"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:layout_gravity="right" />
					<TextView
						android:id="@+id/text_User"
						style="@style/CustomMediumTextViewHeader"
						android:layout_marginLeft="@dimen/padding20dp"
						android:layout_centerVertical="true"
						android:padding="@dimen/padding10dp"
						android:text="Select User"/>
					<com.singlagroup.customwidgets.CommonSearchableSpinner
						android:id="@+id/spinner_User"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:padding="@dimen/padding10dp"/>
				</RelativeLayout>
			</LinearLayout>
			<RelativeLayout
				android:id="@+id/RelativeLayout_Allowed_User"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding16dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<RadioGroup
						android:id="@+id/radio_group_allowed_user"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_horizontal"
						android:layout_centerInParent="true">
						<RadioButton
							android:id="@+id/radio_button_allowed_any_user"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:text="Any User"/>
						<RadioButton
							android:id="@+id/radio_button_allowed_def_user"
							android:layout_width="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:layout_height="wrap_content"
							android:text="Default User"/>
					</RadioGroup>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="Allowed User"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/RelativeLayout_Request_Status"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding16dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<RadioGroup
						android:id="@+id/radio_group_request_status"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_horizontal"
						android:layout_centerInParent="true">
						<RadioButton
							android:id="@+id/radio_button_rs_approved"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:text="Approved"/>
						<RadioButton
							android:id="@+id/radio_button_rs_reject"
							android:layout_width="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:layout_height="wrap_content"
							android:text="Reject"/>
					</RadioGroup>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="Request Status"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/RelativeLayout_Ownership"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding16dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<RadioGroup
						android:id="@+id/radio_group_ownership"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_horizontal"
						android:layout_centerInParent="true">
						<RadioButton
							android:id="@+id/radio_button_ownership_personal"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:text="Personal"/>
						<RadioButton
							android:id="@+id/radio_button_ownership_company"
							android:layout_width="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:layout_height="wrap_content"
							android:text="Company"/>
					</RadioGroup>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="Ownership"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<LinearLayout
				style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
				android:layout_marginTop="@dimen/padding10dp">
				<android.support.design.widget.TextInputLayout
					android:id="@+id/editText_DeviceNo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="text"
						android:maxLength="20"
						android:hint="Asset No/ Device No"/>
				</android.support.design.widget.TextInputLayout>
			</LinearLayout>
			<LinearLayout
				style="@style/CustomeLinearLayoutVerticalMatchParentWrapContent"
				android:layout_marginTop="@dimen/padding10dp">
				<android.support.design.widget.TextInputLayout
					android:id="@+id/editText_remarks"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="text"
						android:maxLength="50"
						android:hint="Remarks"/>
				</android.support.design.widget.TextInputLayout>
			</LinearLayout>
			<RelativeLayout
				android:id="@+id/RelativeLayout_Auto_Login"
				android:visibility="visible"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<!--  This is the main content -->
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="@dimen/padding16dp"
					android:background="@drawable/frame"
					android:orientation="vertical" >
					<RadioGroup
						android:id="@+id/radio_group_auto_login"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_horizontal"
						android:layout_centerInParent="true">
						<RadioButton
							android:id="@+id/radio_button_auto_login_yes"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:text="Yes"/>
						<RadioButton
							android:id="@+id/radio_button_auto_login_no"
							android:layout_width="wrap_content"
							android:layout_margin="@dimen/padding5dp"
							android:layout_height="wrap_content"
							android:text="No"/>
					</RadioGroup>
				</RelativeLayout>
				<!--  This is the title label -->
				<TextView
					style="@style/CustomMediumTextViewHeader"
					android:background="@color/row_active"
					android:padding="5dp"
					android:text="Auto Login"
					android:layout_marginLeft="30dp"
					android:textColor="@color/colorPrimaryDark" />
			</RelativeLayout>
			<Button
				android:id="@+id/btn_update"
				android:padding="10dp"
				android:visibility="visible"
				android:layout_marginTop="@dimen/padding30dp"
				android:gravity="center_horizontal|center_vertical"
				style="@style/CustomButtonMatchParent"
				android:text="Update" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>