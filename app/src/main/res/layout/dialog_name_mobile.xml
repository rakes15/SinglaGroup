<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/row_active"
    android:padding="30dp" >
    <EditText
        android:id="@+id/editTxt_name"
        style="@style/CustomEditTextMatchParent"
        android:hint="*Name"
        android:singleLine="true"
        android:maxLength="50"
        android:padding="10dp"
        android:textCursorDrawable="@color/DarkGray"
        android:inputType="textPersonName">
        <requestFocus />
    </EditText>
    <EditText
        android:id="@+id/editTxt_Moble"
        style="@style/CustomEditTextMatchParent"
        android:layout_below="@+id/editTxt_name"
        android:inputType="number"
        android:textCursorDrawable="@color/DarkGray"
        android:maxLength="10"
        android:singleLine="true"
        android:hint="*Mobile"/>
    <LinearLayout
        android:id="@+id/Linear_Bottom"
        android:layout_below="@+id/editTxt_Moble"
        style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent">
        <LinearLayout
            style="@style/CustomeLinearLayoutHorizontalBothWrap"
            android:layout_margin="@dimen/padding10dp">
            <Button
                android:id="@+id/button_Approve"
                style="@style/CustomButtonWrap"
                android:layout_marginTop="@dimen/padding10dp"
                android:text="Approve" />
        </LinearLayout>
        <LinearLayout
            style="@style/CustomeLinearLayoutHorizontalBothWrap"
            android:layout_margin="@dimen/padding10dp">
            <Button
                android:id="@+id/button_Cancel"
                style="@style/CustomButtonWrap"
                android:layout_marginTop="@dimen/padding10dp"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

