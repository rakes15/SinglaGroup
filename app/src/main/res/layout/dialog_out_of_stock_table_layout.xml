<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/row_active">
    <TextView
        android:id="@+id/text_outOfstock"
        style="@style/CustomMediumTextViewHeaderMatchParent"
        android:padding="@dimen/padding10dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal|center_vertical"
        android:text="Out of Stock"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/text_outOfstock"
        android:layout_above="@+id/Linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/table_Layout_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding10dp">
        </TableLayout>
    </HorizontalScrollView>
    </ScrollView>
    <LinearLayout
        android:id="@+id/Linear"
        android:layout_alignParentBottom="true"
        style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
        android:padding="@dimen/padding10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            style="@style/CustomeLinearLayoutHorizontalBothWrap"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/button_SaveNext"
                style="@style/CustomButtonWrap"
                android:layout_margin="@dimen/padding10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Save/Next"/>
        </LinearLayout>
        <LinearLayout
            style="@style/CustomeLinearLayoutHorizontalBothWrap"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/button_Cancel"
                style="@style/CustomButtonWrap"
                android:layout_margin="@dimen/padding10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>