<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    style="@style/CustomeLinearLayoutVerticalBothMatchParent"
    android:gravity="center_horizontal" >
    <LinearLayout
        style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
        android:gravity="right">
        <TextView
            android:id="@+id/textView_Clear"
            style="@style/CustomSmallTextViewHeader"
            android:text="Clear"
            android:padding="@dimen/padding10dp"/>
    </LinearLayout>
    <LinearLayout
        style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent">
        <LinearLayout
            style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
            android:layout_marginLeft="@dimen/padding5dp">
            <LinearLayout
                style="@style/CustomeLinearLayoutVerticalBothWrap">
                <LinearLayout
                    style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
                    android:padding="@dimen/padding10dp">
                    <LinearLayout
                        style="@style/CustomeLinearLayoutHorizontalBothWrap"
                        android:gravity="center_horizontal">
                        <TextView
                            style="@style/CustomSmallTextViewHeaderMatchParent"
                            android:text="Price Order"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/CustomeLinearLayoutHorizontalBothWrap"
                        android:gravity="center_horizontal">
                        <TextView
                            style="@style/CustomSmallTextViewHeaderMatchParent"
                            android:text="Stock Order"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorAccent"/>
                    </LinearLayout>
                </LinearLayout>
                <info.hoang8f.android.segmented.SegmentedGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_margin="3dp"
                    android:orientation="horizontal"
                    segmentedgroup:sc_border_width="2dp"
                    segmentedgroup:sc_corner_radius="10dp">
                    <!--<TableRow android:layout_marginTop="@dimen/padding10dp">-->
                        <RadioButton
                            android:id="@+id/radioButton_LowToHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5dp"
                            style="@style/RadioButton"
                            android:text="Low-high"/>
                        <RadioButton
                            android:id="@+id/radioButton_HighToLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5dp"
                            style="@style/RadioButton"
                            android:text="High-Low"/>

                    <!--</TableRow>-->
                    <!--<TableRow android:layout_marginTop="@dimen/padding10dp">-->
                        <RadioButton
                            android:id="@+id/radioButton_LowToHighStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5dp"
                            style="@style/RadioButton"
                            android:text="Low-high"/>
                        <RadioButton
                            android:id="@+id/radioButton_HighToLowStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding5dp"
                            style="@style/RadioButton"
                            android:text="High-Low"/>
                    <!--</TableRow>-->
                </info.hoang8f.android.segmented.SegmentedGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding10dp">
        <TextView
            style="@style/CustomSmallTextViewHeaderMatchParent"
            android:text="Price range"
            android:textColor="@color/colorAccent"/>
        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"
            rsb:thumbDisabled="@drawable/custom_slider_thumb"
            rsb:thumbNormal="@drawable/custom_slider_thumb"
            rsb:thumbPressed="@drawable/custom_slider_thumb"
            rsb:thumbShadow="true"
            rsb:thumbShadowBlur="3dp"
            rsb:thumbShadowColor="@color/primary_material_light"
            rsb:thumbShadowXOffset="1dp"
            rsb:thumbShadowYOffset="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/padding20dp"/>
        <TextView
            android:id="@+id/textView_minimumRange"
            style="@style/CustomSmallTextViewContent"
            android:layout_alignBaseline="@+id/seekbar"
            android:layout_below="@+id/seekbar"
            android:text="0"/>
        <TextView
            android:id="@+id/textView_maximumRange"
            style="@style/CustomSmallTextViewContent"
            android:layout_alignBaseline="@+id/seekbar"
            android:layout_below="@+id/seekbar"
            android:layout_alignRight="@+id/seekbar"
            android:text="100"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding10dp">
        <TextView
            style="@style/CustomSmallTextViewHeaderMatchParent"
            android:text="Stock range"
            android:textColor="@color/colorAccent"/>
        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar_Stock"
            rsb:thumbDisabled="@drawable/custom_slider_thumb"
            rsb:thumbNormal="@drawable/custom_slider_thumb"
            rsb:thumbPressed="@drawable/custom_slider_thumb"
            rsb:thumbShadow="true"
            rsb:thumbShadowBlur="3dp"
            rsb:thumbShadowColor="@color/primary_material_light"
            rsb:thumbShadowXOffset="1dp"
            rsb:thumbShadowYOffset="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/padding20dp"/>
        <TextView
            android:id="@+id/textView_minimumRangeStock"
            style="@style/CustomSmallTextViewContent"
            android:layout_alignBaseline="@+id/seekbar_Stock"
            android:layout_below="@+id/seekbar_Stock"
            android:text="0"/>
        <TextView
            android:id="@+id/textView_maximumRangeStock"
            style="@style/CustomSmallTextViewContent"
            android:layout_alignBaseline="@+id/seekbar_Stock"
            android:layout_below="@+id/seekbar_Stock"
            android:layout_alignRight="@+id/seekbar_Stock"
            android:text="100"/>
    </RelativeLayout>
    <LinearLayout
        style="@style/CustomeLinearLayoutHorizontalMatchParentWrapContent"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding10dp">
        <Button
            android:id="@+id/btn_yes"
            style="@style/CustomButtonWrap"
            android:text="OK" />
        <Button
            android:id="@+id/btn_no"
            style="@style/CustomButtonWrap"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/padding10dp"
            android:text="No" />
    </LinearLayout>

</LinearLayout>